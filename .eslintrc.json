{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true
    },
    "extends": [ "plugin:@wordpress/eslint-plugin/recommended" ],
    "rules": {
        "yoda": [2, "never"],
        "prefer-const": ["warn", {
            "destructuring": "any",
            "ignoreReadBeforeAssign": false
        }],
        "no-unused-vars": ["warn", {
            "vars": "all",
            "args": "after-used",
            "ignoreRestSiblings": false
        }],
        "indent": [ "error", 4 ],
        "no-console": "off",
        "no-alert": "off"
    },
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module"
    }
}